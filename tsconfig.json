{
  "compilerOptions": {
    "lib": [
      "es2017"
    ],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "target": "es2017",
    "outDir": "dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@app/*": ["src/*"],
      "@app/": ["src/"],
      "@tests/*": ["__tests__/*"],
      "@tests/": ["__tests__/"]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src",
    "__tests__"
  ]
}
